<header class="header">
  <nav class="navbar" style="height: 51px; background-color: #191919;">
    <div class="navbar-brand">
      <a class="navbar-item" href="{{{or site.url siteRootPath}}}">/** JavadocHub */</a>
      {{#if env.SITE_SEARCH_PROVIDER}}
      <div class="navbar-item search hide-for-print" style="justify-content: center">
        <div id="search-field" class="field">
          <input id="search-input" type="text" placeholder="文档搜索" style="width: 400px"
                 {{#if page.home}}autofocus{{/if}}>
            <!--
            <label class="filter checkbox">
                <input type="checkbox" data-facet-filter="component:{{page.component.name}}">
                &nbsp 本项目
            </label>
            -->
        </div>
      </div>
      {{/if}}

    </div>
    <div id="topbar-nav" class="navbar-menu">
        <div class="navbar-item hide-for-print">
            <div id="group-id" class="field">
                <input id="group-input" type="text" placeholder="groudId"
                       style="width: 250px; padding: 0.35em;">
            </div>
        </div>
        <div class="navbar-item hide-for-print">
            <div id="artifact-id" class="field">
                <input id="artifact-input" type="text" placeholder="artifactId"
                       style="width: 250px; padding: 0.35em;">
            </div>
        </div>
        <div class="navbar-item">
          <span class="control">
              <button class="button" data-target="topbar-nav"
                      onclick="toJavadoc()" >
                查看
              </button>
          </span>
        </div>
      </div>
    </div>
      <script type="text/javascript">
          function toJavadoc() {
              let groupId = document.getElementById('group-input').value;
              let artifactId = document.getElementById('artifact-input').value;
              if (groupId != '' && artifactId != '') {
                  window.open('/doc/' + groupId + '/' + artifactId + '/', '_blank');
              }
          }
      </script>
  </nav>
</header>
